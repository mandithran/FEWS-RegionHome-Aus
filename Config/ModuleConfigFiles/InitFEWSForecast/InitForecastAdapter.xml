<?xml version="1.0" encoding="UTF-8"?>
<generalAdapterRun xmlns="http://www.wldelft.nl/fews" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.wldelft.nl/fews http://fews.wldelft.nl/schemas/version1.0/generalAdapterRun.xsd">
	<general>
		<piVersion>1.10</piVersion>
		<rootDir>%REGION_HOME%/Modules</rootDir>
		<workDir>%ROOT_DIR%/initFEWSForecast</workDir>
		<exportDir>%ROOT_DIR%/initFEWSForecast</exportDir>
		<exportDataSetDir>%ROOT_DIR%</exportDataSetDir>
		<importDir>%ROOT_DIR%/initFEWSForecast</importDir>
		<dumpFileDir>$GA_DUMPFILEDIR$</dumpFileDir>
		<dumpDir>%ROOT_DIR%/initFEWSForecast</dumpDir>
		<diagnosticFile>%ROOT_DIR%/initFEWSForecast/diag.xml</diagnosticFile>
		<time0Format>yyyyMMdd_HHmm</time0Format>
	</general>
	<activities>
	<startUpActivities>
			<purgeActivity>
				<filter>%ROOT_DIR%/initFEWSForecast/*.*</filter>
			</purgeActivity>
		</startUpActivities>
		<exportActivities>
			<exportDataSetActivity>
				<moduleInstanceId>initFEWSForecast</moduleInstanceId>
			</exportDataSetActivity>
		</exportActivities>
		<executeActivities>
			<executeActivity>
				<description>Run python script to initialize a FEWS forecast</description>
				<command>
					<executable>%WORK_DIR%/initializeForecast.bat</executable>
				</command>
				<arguments>
					<argument>%WORK_DIR%\python\initializeForecast.py</argument>
					<argument>%REGION_HOME%</argument>
					<argument>%TIME0%</argument>
					<argument>$LOOP_LOCATION_ID$</argument>
					<argument>%WORK_DIR%</argument>
				</arguments>
				<timeOut>7200000</timeOut>
				<ignoreDiagnostics>true</ignoreDiagnostics>
			</executeActivity>
		</executeActivities>
	</activities>
</generalAdapterRun>
