<?xml version="1.0" encoding="UTF-8"?>
<generalAdapterRun xmlns="http://www.wldelft.nl/fews" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.wldelft.nl/fews http://fews.wldelft.nl/schemas/version1.0/generalAdapterRun.xsd">
	<general>
		<piVersion>1.10</piVersion>
		<rootDir>%REGION_HOME%/Modules</rootDir>
		<workDir>%ROOT_DIR%/WaveDownload</workDir>
		<exportDir>%ROOT_DIR%/WaveDownload</exportDir>
		<exportDataSetDir>%ROOT_DIR%</exportDataSetDir>
		<importDir>%ROOT_DIR%/WaveDownload</importDir>
		<dumpFileDir>$GA_DUMPFILEDIR$</dumpFileDir>
		<dumpDir>%ROOT_DIR%/WaveDownload</dumpDir>
		<diagnosticFile>%ROOT_DIR%/WaveDownload/diag.xml</diagnosticFile>
		<time0Format>yyyyMMdd_HHmm</time0Format>
	</general>
	<activities>
		<startUpActivities>
			<purgeActivity>
				<filter>%ROOT_DIR%/WaveDownload/*.*</filter>
			</purgeActivity>
		</startUpActivities>
		<exportActivities>
			<exportDataSetActivity>
				<moduleInstanceId>WaveDownload</moduleInstanceId>
			</exportDataSetActivity>
		</exportActivities>
		<executeActivities>
			<executeActivity>
				<description>Run python script to download storm surge</description>
				<command>
					<executable>$PYTHON_EXE$</executable>
				</command>
				<arguments>
					<!-- Python script to run -->
					<argument>%WORK_DIR%/python/retrieveAusWaves.py</argument>
					<!-- Work directory -->
					<argument>%WORK_DIR%</argument>
					<!-- System time -->
					<argument>%TIME0%</argument>
					<!-- Filename that holds location set to iterate through -->
					<!--argument>surgeLocations.csv</argument-->
					<!-- Region home path -->
					<argument>%REGION_HOME%</argument>
				</arguments>
				<timeOut>7200000</timeOut>
				<ignoreDiagnostics>false</ignoreDiagnostics>
			</executeActivity>
		</executeActivities>
	</activities>
</generalAdapterRun>